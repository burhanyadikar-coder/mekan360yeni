[Unit]
Description=Mekan360 Backend (uvicorn)
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/var/www/mekan360/backend
EnvironmentFile=/var/www/mekan360/backend/.env
ExecStart=/var/www/mekan360/venv/bin/uvicorn server:app --host 127.0.0.1 --port 8000 --workers 4
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
